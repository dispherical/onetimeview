generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native"]
}

datasource db {
    provider = "sqlite"
    url      = "file:./database.sqlite"
}

model Message {
    id        String   @id @unique @default(nanoid())
    createdAt DateTime @default(now())
    user      String // Workspace ID NOT Global ID
    message   String?
    image     String?
}

model View {
    id        String   @id @unique @default(nanoid())
    createdAt DateTime @default(now())
    user      String
    messageId String
}
